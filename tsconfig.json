{
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2017"],
    "target": "ES5",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "strict": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "dist"]
}
